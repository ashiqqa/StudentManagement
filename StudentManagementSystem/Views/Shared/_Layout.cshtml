<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content")
         @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/JqueryUI/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="conteiner-fluid">
        <div class="sidebar col-lg-2">
            <h4>@Session["userName"]</h4>
            <br /><br />
            <li class="col-lg-12" style="background:#484848; border:none"><a href="/Home/Logout" style="color:#f5ff0c; font-weight:bold;">Logout</a></li>
            <li class="col-lg-12" style="background:#168d7a; border-radius: 8px 8px 0px 0;"><span style="margin-right:5px;" class="glyphicon glyphicon-home"></span> @Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
            <li class="col-lg-12">@Html.ActionLink("Add New Student", "Add", "Student")</li>
            <li class="col-lg-12">@Html.ActionLink("Add New Department", "Add", "Department")</li>
            <li class="col-lg-12">@Html.ActionLink("Add New Session", "Add", "Sesion")</li>
            <li class="col-lg-12">@Html.ActionLink("Add New Semister", "Add", "Semister")</li>
            <li class="col-lg-12">@Html.ActionLink("Add New Country", "Add", "Country")</li>
            <li class="col-lg-12">@Html.ActionLink("Add New City", "Add", "City")</li>
            <li class="col-lg-12">@Html.ActionLink("Add New Bank", "Add", "Bank")</li>
        </div>
        <div class="content col-lg-10">
            @RenderBody()
            
        </div>

    </div>

     @Scripts.Render("~/bundles/jquery")
     @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/JqueryUI/jquery-ui.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
